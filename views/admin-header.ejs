<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="css/foundation.css" />
  <link rel="stylesheet" href="css/admin-style.css" />
  <link rel="stylesheet" href="css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="css/jquery.datetimepicker.css"/ >
  <script src="js/vendor/modernizr.js"></script>
  <script src="js/vendor/jquery.js"></script>
  <script src="js/jquery.datetimepicker.js"></script>
</head>

<body>
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">J-Air</a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
    </ul>

    <section class="top-bar-section">

      <% if (username) { %>
      <!-- Right Nav Section -->
      <ul class="right">
      <li><a>Hi, <%= username %></a></li>
      <li class="divider"></li>
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
      <!-- Left Nav Section -->
      <ul class="left">
        <li ><a href="/admin">Overview</a></li>
        <li class="has-dropdown">
          <a href>Manage</a>
          <ul class="dropdown">
            <li><a href="/admin/user">User</a></li>
            <li><a href="/admin/airport">Airport</a></li>
            <li><a href="/admin/plane">Plane</a></li>
            <li><a href="/admin/flight">Flight</a></li>
            <li><a href="/admin/booking">Booking</a></li>
          </ul>
        </li>
      </ul>
      
      <% } else { %>
      <ul class="right">
      <li class="divider"></li>
        <li><a href="/admin/login">Login</a></li>
      </ul>
      <% } %>

    </section>
  </nav>

  <div class="row">
    <div class="large-8 large-offset-2 columns">
      <% if (success) { %>
      <div data-alert id="success_alert" class="alert-box success">
        <%= success %>
        <a href="#" class="close">&times;</a>
      </div>
      <% } %>
      <% if (error) { %>
      <div data-alert id="error_alert" class="alert-box alert">
        <%= error %>
        <a href="#" class="close">&times;</a>
      </div>
      <% } %>
    </div>
  </div>
