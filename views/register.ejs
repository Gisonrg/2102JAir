<% include header %>
<div class="row" style="margin:2% auto; width:70%; text-align:center;">
	<h2>User Registration</h2>
	<article>
	<% if (error) { %>
	      <div data-alert id="error_alert" class="alert-box alert">
	        <%= error %>
	        <a href="#" class="close">&times;</a>
	      </div>
      <% } %>
	</article>
	<p>
		<form method="post" action="/register" data-abide>
			<div class="medium-8 medium-centered columns">
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="name" class="left inline">Name</label>
					</div>
					<div class="medium-5 columns end">
						<input type="text" id="name" name="name" placeholder="Enter your name" required>
						<small class="error">Please enter a valid name.</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="email" class="left inline">Email</label>
					</div>
					<div class="medium-5 columns end">
						<input type="email" id="email" name="email" placeholder="Enter your email" required pattern="email">
						<small class="error">Please enter a valid email.</small>
					</div>
				</div>
				<div class="row password-field">
					<div class="medium-3 medium-offset-1 columns">
						<label for="password" class="left inline">Password</label>
					</div>
					<div class="medium-5 columns end">
						<input type="password" id="password" name="password" placeholder="Enter your password" required pattern="[a-zA-Z0-9]{6,15}">
						<small class="error">Your password must match the requirements</small>
					</div>				
				</div>
				<div class="row password-confirmation-field">
					<div class="medium-3 medium-offset-1 columns">
						<label for="cfmpassword" class="left inline">Confirm Password</label>
					</div>
					<div class="medium-5 columns end">
						<input type="password" id="cfmpassword" name="cfmpassword" placeholder="Enter your password" data-equalto="password">
						<small class="error">The password did not match</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="contact" class="left inline">Telephone (mobile)</label>
					</div>
					<div class="medium-5 columns end">
						<input type="text" id="contact" name="contact" placeholder="Enter your telephone number" required pattern="[0-9]{8,20}">
						<small class="error">Please enter a valid telephone number</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="passport" class="left inline">Passport</label>
					</div>
					<div class="medium-5 columns end">
						<input type="text" id="passport" name="passport" placeholder="Enter your passport number" required>
						<small class="error">Please enter a valid passport number</small>
					</div>
				</div>


			</div>
			<div class="medium-4 medium-centered columns end" style="text-align:center;">
				<input class="button" type="submit" value="Register"/>
			</div>
		</form>
	</p>
</div>


<% include footer %>