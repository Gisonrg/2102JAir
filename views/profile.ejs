<% include header %>
<div class="row" style="margin:2% auto; width:70%; text-align:center;">
	<h2>My Profile</h2>
	<div class="row">
		<div class="large-8 large-offset-2 columns">
			<% if (success) { %>
			<div data-alert id="success_alert" class="alert-box success">
				<%= success %>
				<a href="#" class="close">&times;</a>
			</div>
			<% } %>
			<% if (error) { %>
			<div data-alert id="error_alert" class="alert-box alert">
				<%= error %>
				<a href="#" class="close">&times;</a>
			</div>
			<% } %>
		</div>
	</div>
	<p>
		<form method="post" action="/profile" data-abide>
			<div class="medium-8 medium-centered columns">
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="email" class="left inline">Email:</label>
					</div>
					<div class="medium-5 columns end">
						<%=user.email%>
					</div>
				</div>
				<div class = "row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="title" class="left inline">Title</label>
					</div>
					<div class="medium-5 columns end">
						<select id="title" name="title">
							<option value="mr">Mr</option>
							<option value="mrs">Mrs</option>
							<option value="ms">Ms</option>
							<option value="doctor (male)">Doctor (Male)</option>
							<option value="doctor (female)">Doctor (Female)</option>
						</select>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="name" class="left inline">Name</label>
					</div>
					<div class="medium-5 columns end">
						<input type="text" id="name" name="name" value="<%=user.name%>" placeholder="Enter First and Last Name" required>
						<small class="error">Please enter a valid name.</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="contact" class="left inline">Telephone (mobile)</label>
					</div>
					<div class="medium-5 columns end">
						<input type="text" id="contact" name="contact" value="<%=user.contact%>" placeholder="Enter your telephone number" required pattern="[0-9]{8,20}">
						<small class="error">Please enter a valid telephone number</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="passport" class="left inline">Passport Number</label>
					</div>
					<div class="medium-5 columns end">
						<input type="text" id="passport" name="passport" value="<%=user.passport%>" placeholder="Enter your passport number" required>
						<small class="error">Please enter a valid passport number</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="passportExpDate" class="left inline">Expire Date</label>
					</div>
					<div class="medium-5 columns end">
						<% if(user.passportExpDate != null) { %>
						<input type="text"  value="<%=user.passportExpDate%>" onfocus="(this.type='date')" onblur="(this.type='text')" id="passportExpDate" name="passportExpDate" placeholder="Passport Expire Date"/>
						<%} else {%>
						<input type="text"  onfocus="(this.type='date')" onblur="(this.type='text')" id="passportExpDate" name="passportExpDate" placeholder="Passport Expire Date"/>
						<%}%>					
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="dateOfBirth" class="left inline">Date Of Birth</label>
					</div>
					<div class="medium-5 columns end">
						<% if(user.dateOfBirth != null) { %>
						<input type="text"  value="<%=user.dateOfBirth%>" onfocus="(this.type='date')" onblur="(this.type='text')" id="dateOfBirth" name="dateOfBirth" placeholder="Date of birth on passport"/>
						<%} else {%>
						<input type="text"  onfocus="(this.type='date')" onblur="(this.type='text')" id="dateOfBirth" name="dateOfBirth" placeholder="Date of birth on passport"/>
						<%}%>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="address" class="left inline">Address</label>
					</div>
					<div class="medium-5 columns end">
						<% if(user.address != null) { %>
						<input type="text" address="<%=user.address%>" id="address" name="address" placeholder="Enter your address">
						<%} else {%>
							<input type="text" id="address" name="address" placeholder="Enter your address">
						<%}%>
					</div>
				</div>
			</div>
			<div class="medium-4 medium-centered columns end" style="text-align:center;">
				<input class="button" type="submit" value="Update"/>
			</div>
		</form>
	</p>
</div>
<% include footer %>