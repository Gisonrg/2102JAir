<% include header %>
<link rel="stylesheet" href="css/user.css">
<% include common/alert-bar %>
<div class="row">
	<div class="small-12 large-8 large-centered columns">
		<fieldset class="white-bg">
			<legend class="transparent-bg">My Profile</legend>
			<form method="post" action="/profile" data-abide>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="email" class="left inline">Email:</label>
					</div>
					<div class="medium-6 columns end">
						<%=user.email%>
					</div>
				</div>
				<div class = "row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="title" class="left inline">Title</label>
					</div>
					<div class="medium-6 columns end">
						<select id="title" name="title">
							<option value="mr">Mr</option>
							<option value="mrs">Mrs</option>
							<option value="ms">Ms</option>
							<option value="doctor (male)">Doctor (Male)</option>
							<option value="doctor (female)">Doctor (Female)</option>
						</select>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="name" class="left inline">Name</label>
					</div>
					<div class="medium-6 columns end">
						<input type="text" id="name" name="name" value="<%=user.name%>" placeholder="Enter First and Last Name" required>
						<small class="error">Please enter a valid name.</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="contact" class="left inline">Telephone</label>
					</div>
					<div class="medium-6 columns end">
						<input type="text" id="contact" name="contact" value="<%=user.contact%>" placeholder="Enter your telephone number" required pattern="[0-9]{8,20}">
						<small class="error">Please enter a valid telephone number</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="passport" class="left inline">Passport Number</label>
					</div>
					<div class="medium-6 columns end">
						<input type="text" id="passport" name="passport" value="<%=user.passport%>" placeholder="Enter your passport number" required>
						<small class="error">Please enter a valid passport number</small>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="passportExpDate" class="left inline">Expire Date</label>
					</div>
					<div class="medium-6 columns end">
						<% if(user.passportExpDate != null) { %>
						<input type="text"  value="<%=user.passportExpDate%>" id="passportExpDate" name="passportExpDate" placeholder="Passport Expire Date"/>
						<%} else {%>
						<input type="text" id="passportExpDate" name="passportExpDate" placeholder="Passport Expire Date"/>
						<%}%>					
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="dateOfBirth" class="left inline">Date Of Birth</label>
					</div>
					<div class="medium-6 columns end">
						<% if(user.dateOfBirth) { %>
						<input type="text"  value="<%=user.dateOfBirth%>" id="dateOfBirth" name="dateOfBirth" placeholder="Date of birth on passport"/>
						<%} else {%>
						<input type="text" id="dateOfBirth" name="dateOfBirth" placeholder="Date of birth on passport"/>
						<%}%>
					</div>
				</div>
				<div class="row">
					<div class="medium-3 medium-offset-1 columns">
						<label for="address" class="left inline">Address</label>
					</div>
					<div class="medium-6 columns end">
						<% if(user.address) { %>
						<input type="text" value="<%=user.address%>" id="address" name="address" placeholder="Enter your address">
						<%} else {%>
						<input type="text" id="address" name="address" placeholder="Enter your address">
						<%}%>
					</div>
				</div>
				<div class="medium-4 medium-centered columns end" style="text-align:center;">
					<input class="button" type="submit" value="Update"/>
				</div>
			</form>
		</fieldset>
	</div>
</div>
<script type="text/javascript" src="js/index/profile.js"></script>
<% include footer %>