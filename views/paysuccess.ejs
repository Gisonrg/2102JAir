<% include header %>
<link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="css/paysuccess.css">

<div class="row">
	<div class="small-12 large-9 large-centered columns">
		<h3 class="heading">Thank you for booking with JAir!</h3>
		<fieldset class="white-bg">
			<legend class="transparent-bg">Flight confirmed</legend>
			<div class="row">
				<div class="small-9 large-8 columns">
					<p>Hi <%=user.name%>,</p>
					<p>Your payment is <strong style="color: #00A388">successful!</strong></p>
					<p>We will shortly send the itinerary to your email: <br><strong style="color: #3498DB"><u><%= user.email %></u></strong></p>
				</div>
				<div class="small-3 large-3 columns logo">
					<img src="/img/jair.png">
				</div>
			</div>
			<fieldset class="grey-bg">
				<div class="small-9 large-9 large-centered columns">
					<ul class="pricing-table">
						<li class="title">Booking Details</li>
						<li class="price">$<%= totalPrice+"    " %><i class="fi-torsos"></i><%= depart_flight.passengers %></li>
						<li class="bullet-item">
							<div class="small-11 large-11 large-centered columns">
								<table style="margin-bottom: 0rem">
									<tr>
										<td style="text-align: center"><%= depart_flight.origin %></td>
										<td style="text-align: center;color:red;"><%= depart_flight.fno %></td>
										<td style="text-align: center"><%= depart_flight.destination %></td>
									</tr>
									<tr>
										<td style="text-align: center"><%= depart_flight.flight_time + " "+ depart_flight.depart_time.substring(0,5) %></td>
										<td style="text-align: center"><i class="icon-arrow-right"></i></td>
										<td style="text-align: center"><%= depart_flight.flight_time + " "+ depart_flight.arrive_time.substring(0,5) %></td>
									</tr>
								</table>
							</div>
						</li>
						<% if (return_flight) { %>
						<li class="bullet-item">
							<div class="small-11 large-11 large-centered columns">
								<table style="margin-bottom: 0rem">
									<tr>
										<td style="text-align: center"><%= return_flight.origin %></td>
										<td style="text-align: center;color:red;"><%= return_flight.fno %></td>
										<td style="text-align: center"><%= return_flight.destination %></td>
									</tr>
									<tr>
										<td style="text-align: center"><%= return_flight.flight_time + " "+return_flight.depart_time.substring(0,5) %></td>
										<td style="text-align: center"><i class="icon-arrow-right"></i></td>
										<td style="text-align: center"><%= return_flight.flight_time + " "+return_flight.arrive_time.substring(0,5) %></td>
									</tr>
								</table>
							</div>
						</li>
						<% } %>
						<li class="cta-button"><a class="button" href="/booking">Manage my booking</a></li>
					</ul>
				</div>
			</fieldset>
		</fieldset>
	</div>
</div>

<% include footer %>