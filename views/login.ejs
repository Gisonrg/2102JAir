<% include header %>
<div class="row" style="margin:2% auto; width:70%; text-align:center;">
	<h2>Passenger Login</h2>
	<p>
	<form method="post" action="/admin/login">
		<div class="medium-8 medium-centered columns">
			<div class="row">
				<div class="medium-2 medium-offset-2 columns">
					<label for="username" class="left inline">Email</label>
				</div>
				<div class="medium-5 columns end">
					<input type="text" id="username" name="username" placeholder="Enter your username">
				</div>
			</div>
			<div class="row">
				<div class="medium-2 medium-offset-2 columns">
					<label for="password" class="left inline">Password</label>
				</div>
				<div class="medium-5 columns end">
					<input type="password" id="password" name="password" placeholder="Enter your password">
				</div>
			</div>

		</div>
		<div class="medium-4 medium-centered columns end" style="text-align:center;">
			<button class="button" type="submit">Login</button>
		</div>
	</form>
	</p>
</div>


    
<% include footer %>