<% include header %>
<link rel="stylesheet" href="css/home.css">
<div class="fullscreen background"  data-img-width="2560" data-img-height="1600">

	<div class="content-a">
		<div class="content-b">
			<div class="large-8 large-centered column">
				<p class="home-big-word">Hi, where is your next destination?</p>
				<form id="searching-seat-form" method="post" action="/search">
					<div class="row">
						<div class="small-4 columns">
							<label  style="color:white;">From
								<input type="text" id="from" name="from" placeholder="From..." />
							</label>
						</div>
						<div class="small-4 columns">
							<label  style="color:white;">To
								<input type="text" id="search_to" name="to"placeholder="Destination..." />
							</label>
						</div>
						<div class="small-4 columns">

							<label style="color:white;">Passenger(s)
								<input type="text" id="search_passenger" name="passenger" value="1" placeholder="Number of passengers..." />
							</label>
						</div>
					</div>
					<div class="row">
						<div class="large-6 columns">
							<label  style="color:white;" >Depart
								<input type="text" id="depart_date" name="depart_date" placeholder="Depart" />
							</label>
						</div>
						<div class="large-6 columns">
							<label  style="color:white;">Return
								<input type="text"  id="return_date" name="return_date" placeholder="Return" />
							</label>
						</div>
					</div>
					<div class="row">
						<div class="small-7 columns">
							<label style="color:white;">Trip Type</label>
							<input type="radio"  name="trip_type" value="Single" id="search_type_single"><label for="search_type_single" style="color:white;font-size:20px;">Single</label>
							<input type="radio" name="trip_type" value="Return" id="search_type_return" checked><label for="search_type_return" style="color:white;font-size:20px;" checked="checked">Return</label>
						</div>
						<div class="small-5 columns">
							<label style="color:white;">Class
								<select id="search_class" name="seat_class">
									<option value="Economy" selected="selected">Economy</option>
									<option value="Business">Business</option>
									<option value="Suite">Suite</option>
								</select>
							</label>
						</div>
					</div>
					<input class="button" id="seat_submit" value="Find" type="submit" />
				</form>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" src="js/index/index.js"></script>
<script type="text/javascript" src="js/index/search.js"></script>
<% include footer %>